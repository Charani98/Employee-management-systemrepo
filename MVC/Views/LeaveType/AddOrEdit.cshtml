@model MVC.Models.mvcLeaveType

@{
    ViewBag.Title = "AddOrEdit";
}
<style>
    .error {
        color: red;
        font-size: 12px;
    }
</style>

@section Scripts{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Leave Type Form</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-body">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(model => model.LeaveTypeID)

                    <table class="table" id="dataTable" width="100%" cellspacing="0">
                        <tr>
                            <td>@Html.Label("Leave Type ")</td>
                            <td>@Html.EditorFor(model => model.LeaveType1)</td>
                            <td>@Html.ValidationMessageFor(model => model.LeaveType1, "", new { @class = "error" })</td>
                        </tr>
                        <tr>
                            <td>@Html.Label("No Of Days ")</td>
                            <td>@Html.EditorFor(model => model.NoOfDays)</td>
                            <td> @Html.ValidationMessageFor(model => model.NoOfDays)</td>
                        </tr>

                        <tr>
                            <td>
                                <button type="reset" class="btn btn-warning btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </span>
                                    <span class="text">Reset</span>
                                </button>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-success btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-check"></i>
                                    </span>
                                    <span class="text">Submit</span>
                                </button>
                            </td>
                            <td> </td>

                        </tr>
                    </table>
                }
            </div>
        </div>
        <script>
            document.write('<a href="' + document.referrer + '" class="btn btn-light btn-icon-split"><span class="icon text-gray-600"><i class= "fas fa-arrow-left"></i></span ><span class="text">Go Back</span></a>');
        </script>
    </div>
</div>