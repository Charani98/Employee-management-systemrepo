@model MVC.Models.mvcEmployeeTypeModel
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.EmployeeTypeID)

        <div class="form-group">
            @Html.LabelFor(model => model.EmployeeTypeName)
            @* @Html.DropDownListFor(model => model.DeptName, new SelectList(ViewBag.list))*@

            @Html.EditorFor(model => model.EmployeeTypeName)
            @Html.ValidationMessageFor(model => model.EmployeeTypeName)
        </div>

   

        <div class="form-group">
            <input type="submit" value="Submit" class="btn button">
            <input type="reset" value="Reset" class="btn button">
        </div>
    }


