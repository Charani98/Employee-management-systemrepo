@model MVC.Models.mvcDepartmentModel
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.DeptID)

    <div class="form-group">
        @Html.LabelFor(model => model.DeptName)
      @* @Html.DropDownListFor(model => model.DeptName, new SelectList(ViewBag.list))*@

        @Html.EditorFor(model => model.DeptName)
        @Html.ValidationMessageFor(model => model.DeptName)
    </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeptDescription)
            @Html.EditorFor(model => model.DeptDescription)
            @Html.ValidationMessageFor(model => model.DeptDescription)
        </div>

        <div class="form-group">
           <input type="submit" value="Submit" class="btn button">
            <input type="reset" value="Reset" class="btn button">
        </div>
    }

