@model MVC.Models.mvcDepartmentModel
@{
    ViewBag.Title = "AddOrEdit";
}

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.DeptID)

        <table>

            <tr>
                <td>@Html.LabelFor(model => model.DeptName)</td>
                <td> @Html.EditorFor(model => model.DeptName)</td>
                <td>@Html.ValidationMessageFor(model => model.DeptName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.DeptDescription)</td>
                <td>@Html.EditorFor(model => model.DeptDescription)</td>
                <td>@Html.ValidationMessageFor(model => model.DeptDescription)</td>
            </tr>
            <tr>
                <td><input type="submit" value="Submit" class="btn button"></td>
                <td><input type="reset" value="Reset" class="btn button"></td>
                <td></td>
            </tr>
        </table>
    }
</div>